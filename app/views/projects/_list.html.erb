<li class="list-group-item px-0 <%= project ? project[:color] : "" %> clone-project <%= project.present? ? "" : " d-none" %>">
    <div class="row justify-content-between mw-100 mx-0">
        <%= form_for @project, method: :put do | f | %>
            <div class="row justify-content-between mw-100 w-100">
                <a data-bs-toggle="collapse" href="#proj<%= project.present? ? project[:id] : "" %>" class="accordion-toggle collapsed col-md-1" >
                    <i class="bi bi-chevron-down cursor-pointer"></i>
                </a>
                <div class="col-md col-12">
                    <%= f.text_field :name, class:"form-control transparent", placeholder:"Nome", value: (project.nil? ? "" : project[:name]), required:"" %>
                </div>
                <div class="col-md col-sm-6">
                    <%= f.text_field :date_in, class:"form-control transparent", placeholder:"00/00/0000 00:00:00", value: (project.present? ? project[:date_in].strftime("%m/%d/%Y %H:%M:%S") : ""), required:"" %>
                </div>
                <div class="col-md col-sm-6">
                    <%= f.text_field :date_end, class:"form-control transparent", placeholder:"00/00/0000 00:00:00", value: (project.present? ? project[:date_end].strftime("%m/%d/%Y %H:%M:%S") : ""), required:"" %>
                </div>
                <%= f.hidden_field :id, name:"id", value: (project.present? ? project[:id] : "") %>
                <div class="col-md-2 pr-md-5 px-5 pl-md-0 my-4 my-md-0"><%= progress(project ? project[:progress] : 0) %></div>
                <% if project.present? %>
                    <div class="col-md-1">
                        <div class="row justify-content-center align-items-center mx-0 mx-auto">
                            <div class="text-center col-6 p-0">
                            <%= button_tag(  :class => "transparent red-bs", formaction: destroy_projects_path(project), formmethod: :get, data: { confirm: "Tem certeza que deseja remover?" }) do %>
                                    <i class="bi bi-trash-fill"></i>
                                <% end %>
                            </div>
                            <div class="text-center col-6">
                                <%= button_tag(:class => "transparent blue-bs") do %>
                                    <i class="bi bi-pencil-square"></i>
                                <% end %>
                            </div>
                        </div>      
                    </div>
                <% end %>
            </div>
        <% end %>
        <div class="task accordian-body collapse col-12 px-0" id="proj<%= project.present? ? project[:id]: "" %>">      
            <ul class="list-group list-group-flush">
                <!-- Tasks -->
                <li class="list-group-item mt-3">
                    <%= form_for @task do | form | %>
                        <div class="row justify-content-between mw-100 form-group mb-0 align-items-center">
                            <div class="col-md-1 my-2 my-md-0">
                                <div class="btn btn-secondary py-0 px-1" title="Cadastrar tarefas">
                                    <i class="bi bi-info"></i>
                                </div>
                            </div>
                            <div class="col-12 col-md mb-2 mb-md-0">
                                <%= form.text_field :name, class:"form-control", placeholder:"Nome", required:"" %>
                            </div>
                            <div class="col-6 col-md">
                                 <%= form.text_field :date_in, class:"form-control", placeholder:"00/00/0000 00:00:00", required:"" %>
                            </div>
                            <div class="col-6 col-md">
                                 <%= form.text_field :date_end, class:"form-control", placeholder:"00/00/0000 00:00:00", required:"" %>
                            </div>
                            <div class="col-auto mt-2 mt-md-0 col-lg-1 col-md-2 mlauto">
                                <%= form.hidden_field :project_id, value: (project.present? ? project[:id] : "") %>
                                <%= form.submit "Adicionar", class:"btn btn-success" %>
                            </div>                               
                        </div>
                    <% end %>
                </li>
                <% if project.task.present? %>               
                    <% project.task.each do | task | %>
                        <%= render 'tasks', task: task %>
                    <% end %>
                <% else %>
                    <%= render 'tasks', task: nil %>
                <% end %>
            </ul>
        </div>
    </div>
</li>